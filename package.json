{
  "name": "duplex",
  "version": "0.1.0",
  "description": "Desktop agentic coding management app",
  "main": "dist-electron/main/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "bun run build && electron-builder"
  },
  "build": {
    "appId": "com.duplex.app",
    "productName": "Duplex",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/electron-store/**/*",
      "node_modules/node-pty/**/*"
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Development"
    },
    "mac": {
      "target": ["dmg"]
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/node-pty/**"
    ]
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.27",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.1",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "electron-store": "^11.0.2",
    "node-pty": "^1.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.11"
  }
}
